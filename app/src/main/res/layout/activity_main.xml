<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="MainActivity">

        <FrameLayout
            android:id="@+id/flContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/nvNavigation">

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="485dp"
                android:textSize="30px"
                android:backgroundTint="@color/transparent"
                android:shadowColor="@color/transparent"
                android:textColor="@color/black"
                android:text="CS335" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="286dp"
                android:layout_marginTop="380dp"
                app:srcCompat="@drawable/classschedule" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="353dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/eventsschedule" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="80dp"
                android:text="CS499 - Capstone Course"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:text=" - Due in 2 weeks"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="100dp"
                android:text=" - Merge branches"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="100dp"
                android:text=" - Work on Final"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="100dp"
                android:text=" - Presentation"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="80dp"
                android:text="Job Fair (5/30)"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="335dp"
                android:layout_marginLeft="170dp"
                android:text="Add Event"
                android:textColor="@color/black"
                android:textSize="44px"
                android:textStyle="bold"/>

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nvNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/nav_bar_bottom"
            app:menu="@menu/bottom_nav_menu" />
    </RelativeLayout>
</layout>
